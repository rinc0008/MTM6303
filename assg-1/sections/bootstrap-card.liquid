<div class="card" style="width: 20rem; margin:0 15% 0;">
  <img class="card-img-top" src="{{ section.settings.card_image | image_url: width: 500 }}" alt="{{section.settings.card_image.alt}}">
  <div class="card-body">
    <h3>{{section.settings.custom_text_title}}</h3><br>
    <p>{{section.settings.custom_text_body}}</p><br>
    <a href="{{section.settings.custom_link_button}}" class="custom_link_button btn btn-primary">{{section.settings.custom_text_button}}</a>
  </div>
</div>

<style>
  .card .btn {
    background-color : {{ section.settings.btn-color}}
  }
  
</style>  
{% schema %}
{
    "name": "Bootstrap Card",
    "tag": "section",
    "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },
        {
            "type": "color",
            "id": "btn-color",
            "label": "Button Color",
            "default": "#3b4d28"
        },

		{
            "id": "custom_text_title",
			"type": "text",
            "label": "Title",
            "default": "Welcome to my shop!"
        },
		{
            "id": "custom_text_body",
			"type": "textarea",
            "label": "Body Content",
            "default": "Welcome to my shop!"
        },
		{
            "type": "url",
            "id": "custom_link_button",
            "label": "Button link"
        },

		{
            "id": "custom_text_button",
			"type": "text",
            "label": "Button",
            "default": "Link here!"
        }

    ],
    "presets": [{
        "name": "Bootstrap Card",
        "category": "Custom"
    }]
}
{% endschema %}

